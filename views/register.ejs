<!DOCTYPE html>
<html>
    <head>
        <%- include("partials/head.ejs") %>
    </head>
    <body>
        <%- include("partials/header.ejs") %>
        <div class="container">
            <%- include("partials/error_msg.ejs") %>
            <form class="auth-form" method="post">
              <h1>Registration</h1>
              <label for="username">Username:</label> <input class="auth-form__input" type="text" name="username"> <br>
              <label for="email">&nbsp&nbsp&nbspEmail&nbsp:</label> <input class="auth-form__input" type="text" name="email" value="example@example.com"> <br>
