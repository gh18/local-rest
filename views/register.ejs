              <label for="password">Password:</label> <input class="auth-form__input" type="password" name="user_password"> <br>
              <p><input type="checkbox" name="agree_rules" id="agree_rules" required> <label for="agree_rules">I Accept<a href=''> the User Agreement</a></label></p>
              <input type="submit" class="button-default-s" value="Registration">
            </form>
        </div>
        <%- include("partials/footer.ejs") %>
    </body>
</html>